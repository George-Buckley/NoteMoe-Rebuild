<div class="row">
  <div class="col-md-12">
    <center><h2>New Note</h2></center>
    </div>
    <div class="col-md-6 col-md-offset-3">
    <center><br />
<%= form_for @note do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
 
    <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
    </p>
 
    <p>
        <%= f.submit 'Create Note', class: 'btn btn-success' %>
    </p>
<% end %>

<%= link_to "Back to Notes", notes_path, class: 'btn btn-primary' %>