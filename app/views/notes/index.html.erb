<div class="container">
    <row class="row">
        <div class="col-12-md">
            <h1>All Notes</h1>
        </div>
    </row>
    <div class="row">
        <% unless @notes.blank? %>
        <% @notes.each do |note| %>
            <a href="<%= (url_for [note]) %>">
                <div class="col-md-3">
                    <div class="well">
                        <h3><%= note.title.first(19) %></h3>
                        <p><%= time_ago_in_words(note.created_at) + " ago" %></p>
                        <p>
                        <button>
                            <%= link_to "Edit", edit_note_path(note.id) %>
                        </button>
                        <button>
                            <%= link_to "Delete", note_path(note.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                        </button>
                        </p>
                    </div>
                </div>
        <% end %>
        <% else %>
          <h2>Add a Note</h2>
          <p>It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.</p>
          <button>
            <%= link_to "New Note", new_note_path %>
          </button>
        <% end %>
    </div>
</div>
      
